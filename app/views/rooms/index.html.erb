<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-5">
    <h1>Rooms</h1>

    <ul class="mt-4 list-unstyled">
      <%= render @rooms %>
    </ul>

    <div class="mt-2">
      <%= render 'rooms/form', room: @room %>
    </div>
  </div>

  <div class="col-5 mt-2 text-right">
    <h3>Users online:</h3>
    <% @users.each do |user| %>
      <%= user.nickname if user.online %>
    <% end %>
    <div id="users"></div>
  </div>
</div>

