<p id="notice"><%= notice %></p>

<div class="row justify-content-between">
  <div class="col-5">
    <h1>Rooms</h1>

    <ul class="mt-4 list-unstyled">
      <%= render @rooms %>
    </ul>

    <div class="mt-2">
      <%= render 'rooms/form', room: @room %>
    </div>
  </div>

  <div class="col-4 mt-2 text-left">
    <h3>Users online:</h3>

    <div id="users" class="text-success">
      <% @users_online.each do |user| %>
        <p id="<%= user.id %>">
          <%= user.nickname %>
        </p>
      <% end %>
    </div>
  </div>
</div>

